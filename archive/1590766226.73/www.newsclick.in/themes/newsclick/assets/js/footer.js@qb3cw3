(function($){var footerDisplayStep=800;var timeout=null;var footer=$(".footer");if(!window.matchMedia('(max-width: 768px)').matches){if(($(window).innerHeight()+footerDisplayStep)<$(document).innerHeight()){$(window).scroll(function(){if(!timeout){timeout=setTimeout(function(){timeout=null;if($(window).scrollTop()>footerDisplayStep){footer.css("display","block");}else{footer.css("display","none");}},250);}});}else{footer.css("display","block");}}})(jQuery);