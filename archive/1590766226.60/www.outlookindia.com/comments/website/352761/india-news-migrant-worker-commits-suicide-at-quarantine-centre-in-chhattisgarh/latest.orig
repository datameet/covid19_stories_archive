<script>
jQuery(document).ready(function(){
	var track_load = 5; 
    var loading  = false;
	var total_groups = "0"; 
	var page_number = 1;
	var page_url = "/comments/load_more/web/352761/";
	
   jQuery("#load").click(function(){		
		if(total_groups > 0 && loading == false) 
		{
			loading = true; 
			jQuery('#load').hide();
			jQuery.get(page_url+(track_load*page_number), function(data){
				jQuery("#comments_list").append(data); 
				jQuery('#load').show();
				page_number++;
				total_groups--;
				loading = false;
				 console.log(page_url+(track_load*page_number)+', total_groups:'+total_groups);
				if(total_groups<=0){
					jQuery("#load").hide();
				}
				
			}).fail(function(xhr, ajaxOptions, thrownError) { 
				jQuery('#load').show();
				loading = false;
			});
		} else {
			jQuery("#load").hide();
		}
	});
});

</script>


<script>
function likedislike(id, type) {
	var like_count = jQuery('#'+type+'_'+id).data("id");
	jQuery.ajax({
    type: "POST",
    url: '/magazine/like_dislike/'+id+'/'+type,
    data: {'id':id,'type':type},
    success: function (data) {
                  if(data) {
					 like_total = parseInt(data)+parseInt(like_count);
                      jQuery('#'+type+'_'+id).html('('+like_total+')');
                  } else {
						alert('You have already voted.');
					}	
            }
	});
}
</script>



<script>

function setCookie(cname,cvalue,exdays) {
    var d = new Date();
    d.setTime(d.getTime() + (exdays*24*60*60*1000));
    var expires = "expires=" + d.toGMTString();
    document.cookie = cname + "=" + cvalue + ";" + expires + ";path=/";
}


//==============================

function getCookie(cname) {
    var name = cname + "=";
    var decodedCookie = decodeURIComponent(document.cookie);
    var ca = decodedCookie.split(';');
    for(var i = 0; i < ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
            c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
            return c.substring(name.length, c.length);
        }
    }
    return "";   
}	

//console.log('Login' + checkLoginState());
function checkLoginState(){
	if(getCookie('user_email') !=''){
	return 'true';
	}else{
		return 'false';
	}
}

function setCBox(){
		$('.box_login').replaceWith(function() {
		return $('#btnNew', this);
		});
}
function setCommentText(){
	parent.commentText = $('#comment').val();
}
$('#mycomment').submit(function(){
	if($('#comment').val().length > 3){
		parent.commentText='';
	}else{
	 event.preventDefault();
	 setCommentText();
	 $('.err_msg').text('To Comment, Minimum 4 Character Required');
	return false;	
	}
		});
function getSetComment(){
	if(checkLoginState() =='true'){
		jQuery('#comment').show();
		jQuery('.report_abuse_login').hide();
		jQuery('.report_abuse_data').show();
		jQuery('#afcommentbtn').hide();
		jQuery('#useremail').val(getCookie('user_email'));
		setCBox();
		
	}else{
		jQuery('.report_abuse_login').show();
		jQuery('.report_abuse_data').hide();
		jQuery('#afcommentbtn').show();
	}
	$('#comment').val(parent.commentText);
	$.colorbox.close();
}	
getSetComment();

