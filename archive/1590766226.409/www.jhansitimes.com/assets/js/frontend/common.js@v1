var baseUrl=getRootUrl();function getRootUrl(){return window.location.origin?window.location.origin+"/":window.location.protocol+"/"+window.location.host+"/"}function valid_email(e){return!!/^[\w\-\.\+]+\@[a-zA-Z0-9\.\-]+\.[a-zA-z0-9]{2,4}$/.test(e)}function UpdateNewsClkCount(e){$.ajax({type:"POST",url:baseUrl+"AjaxHitController/update_news_click_count",data:{news_id:e},async:!1,success:function(e){}})}function newsletter_subscribe(){var e=$.trim($("#subscriber_email").val()),t=!0;if(""==e&&(alert("Email is required !"),t=!1),""!=e&&(valid_email(e)||(alert("Invalid Email !"),t=!1)),t){var r=new FormData($("#newsletter_subscribe_form")[0]),a=baseUrl+"AjaxHitController/NewsLetterSubscribe";$.ajax({url:a,type:"POST",data:r,processData:!1,contentType:!1,success:function(e){var t=JSON.parse(e),r=t.mess;1==t.status&&($("#newsletter_subscribe_form")[0].reset(),alert(r)),0==t.status&&alert(r)}})}return!1}$(document).ready(function(){$(".error_remove").click(function(){var e=$(this).attr("id");$("#"+e+"_error").html("")})}),$(document).on("keyup",".phone",function(){this.value=this.value.replace(/[^0-9,+,-]/g,"")});